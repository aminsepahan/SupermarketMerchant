<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/splashLogoBack"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/shape_cart_badge" />

    <View
        android:id="@+id/animatingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splashColor"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/splashTitle"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/splashLogoBack"
        android:layout_alignLeft="@+id/splashLogoBack"
        android:layout_alignTop="@+id/splashLogoBack"
        android:layout_marginLeft="65dp"
        android:alpha="0"
        android:src="@drawable/splash_title" />

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/splashLogoBack"
        android:layout_alignLeft="@+id/splashLogoBack"
        android:layout_alignTop="@+id/splashLogoBack"
        android:layout_marginLeft="30dp"
        android:alpha="0"
        android:src="@drawable/splash_logo" />

</RelativeLayout>